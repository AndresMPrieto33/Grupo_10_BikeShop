<!DOCTYPE html>
<html lang="en">
        <!-- ## HEAD ## -->
        <%- include('partials/head') %>
        <!-- ## HEAD ## -->
<body>
    <main>
        <!-- ### HEADER ### -->
        <%- include('partials/header') %>
        <!-- ### HEADER ### -->

        <h2>Ofertas</h2>
        <% for( let i = 0; i < sale.length; i++ ) { %>
        
            <div class="nov">
                <section class="productos-novedades">
                    <div class="novedades">
                        <a href="/products/detail/<%= sale[i].id  %>" class="novedadesA"><img src="img/products/<%= sale[i].image %>" alt="Imagen Bicicleta"></a>
                        <div class="detalle">
                            <div class="name"><h4><%= sale[i].name %></h4></div>
                            <div class="description"><h4><%= sale[i].description %></h4></div>
                            <div class="precio"><p><del> $<%= sale[i].price %></del></p></div>
                            <div class="discount">
                                <% let precioFinal = (sale[i].price) - ((sale[i].price * 10) / 100) %>
                               <p> Descuento: $<%= (sale[i].price * 10) / 100 %></p>  
                                <b> <p> Precio final: $<%= precioFinal %></p></b>
                            </div>
                            <section class="boton-comprar-detalle">
                                <button><a href="/products/cart">AÃ±adir al Carrito</a></button>
                        </section>                        
                    </div>
                </section>
            </div>
        <% } %>



        <!-- ## footer ## -->
        <%- include('partials/footer') %>
        <!-- ## footer ## -->
    </main>   
</body>
</html>