<!DOCTYPE html>
<html lang="en">
<!-- ## HEAD ## -->
<%- include('partials/head') %>
    <!-- ## HEAD ## -->

<body>
    <main class="register">
        <h2>CREACION DE PRODUCTOS</h2>
        <form id="form" action="/products/create" method="POST" enctype="multipart/form-data" class="register-form">
                
            <div class="personal-info">
                    <input type="text" id="name" name="name" placeholder="Ej: Bicicleta Venzo"
                        class="form-control <%= locals.errors && errors.name ? 'is-invalid' : null %>"
                        value="<%= locals.oldData ? oldData.name : null %>">
                    <% if (locals.errors && errors.name) { %>
                        <div class="error-text" style="color: red;">
                            <%= errors.name.msg %>
                        </div>
                        <% } %>
                        <div class="errorName error-text"></div>
                </div>
            

            
                <div class="personal-info">
                    <input type="text" id="price" name="price" placeholder="$ 100000" 
                    class="form-control <%= locals.errors && errors.price ? 'is-invalid' : null %>"
                    value="<%= locals.oldData ? oldData.price : null %>">
                <% if (locals.errors && errors.price) { %>
                    <div class="error-text" style="color: red;">
                        <%= errors.price.msg %>
                    </div>
                    <% } %>
                </div>
            
            
                <div class="personal-info">
                    <input type="text" id="discount" name="discount" placeholder="Ej: Bicicleta Venzo"
                    class="form-control <%= locals.errors && errors.discount ? 'is-invalid' : null %>"
                    value="<%= locals.oldData ? oldData.discount : null %>">
                <% if (locals.errors && errors.discount) { %>
                    <div class="error-text" style="color: red;">
                        <%= errors.discount.msg %>
                    </div>
                    <% } %>
                </div>
            
            
                <div class="personal-info">
                    <input type="text" id="inStock" name="stock" placeholder="10" 
                    class="form-control <%= locals.errors && errors.stock ? 'is-invalid' : null %>"
                    value="<%= locals.oldData ? oldData.stock : null %>">
                <% if (locals.errors && errors.stock) { %>
                    <div class="error-text" style="color: red;">
                        <%= errors.stock.msg %>
                    </div>
                    <% } %>
                </div>
            
            
                <div class="personal-info">
                    <input type="text" id="brand" name="brand" placeholder="Venzo" 
                    class="form-control <%= locals.errors && errors.brand ? 'is-invalid' : null %>"
                    value="<%= locals.oldData ? oldData.brand : null %>">
                <% if (locals.errors && errors.brand) { %>
                    <div class="error-text" style="color: red;">
                        <%= errors.brand.msg %>
                    </div>
                    <% } %>
                </div>
            

            
                <div class="personal-info">
                    <input type="text" id="color" name="color" placeholder="Blanco" 
                    class="form-control <%= locals.errors && errors.color ? 'is-invalid' : null %>"
                    value="<%= locals.oldData ? oldData.color : null %>">
                <% if (locals.errors && errors.color) { %>
                    <div class="error-text" style="color: red;">
                        <%= errors.color.msg %>
                    </div>
                    <% } %>
                </div>
            

            
                <div class="personal-info">
                    <input type="text" id="description" name="description" placeholder="Una Super Bici"
                    class="form-control <%= locals.errors && errors.description ? 'is-invalid' : null %>"
                    value="<%= locals.oldData ? oldData.description : null %>">
                <% if (locals.errors && errors.description) { %>
                    <div class="error-text" style="color: red;">
                        <%= errors.description.msg %>
                    </div>
                    <% } %>
                    <div class="errorDescription error-text"></div>
                </div>
            
            
                <div class="campo">
                    <div class="tag">
                        <label for="imagen" id="avatar-load" class="form-label">Imagen del producto:</label>
                    <input name="image" id="image" class="form-input" type="file">
                    </div>
                    <br>
                    <div class="form-control <%= locals.errors && errors.image ? 'is-invalid' : null %>"
                    value="<%= locals.oldData ? oldData.image : null %>">
                <% if (locals.errors && errors.image) { %>
                    <div class="error-text" style="color: red;">
                        <%= errors.image.msg %>
                    </div>
                    <% } %>
                    <div class="errorFile error-text"></div>
                </div>
            
            <div class="options">
                
                    <label for="category" class="form-label">Categoría:</label>
                    <select name="category" id="category" class="form-input">
                    <option>Elegí</option>
                    <option value="1">Bicicletas</option>
                    <option value="2">Accesorios</option>
                    <option value="3">Componentes</option>
                    <option value="4">Indumentaria</option>
                    <option value="5">Ruedas</option>
                    <option value="6">Ofertas</option>
                        </select>
                
                
            </div>
            <br>
            <div class="botones">
                <input type="submit" value="Confirmar" class="submit">
                <p></p>
                <input type="reset" value="Borrar">
            </div>
        </form>
    </main>
    <!-- ## footer ## -->
    <%- include('partials/footer') %>
    <!-- ## footer ## -->
    <script src="/js/productCreateValidaton.js"></script>
</body>
</html>