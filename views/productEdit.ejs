<!DOCTYPE html>
<html lang="en">
        <!-- ## HEAD ## -->
        <%- include('partials/head') %>
        <!-- ## HEAD ## -->
<body>
        <!-- ## header ## -->
        <%- include('partials/header') %>
        <!-- ## header ## -->

        <section>
            <article class="container">
                <form action="/products/edit/<%= products.id %> " method="POST" enctype="multipart/form-data">
                    <div class="campo">
                        <div class="tag">
                            <label for="name" class="form-label">Nombre del producto:</label>
                                <input type="text" id="name" name="name" value="<%= products.name %>" class="form-input">
                        </div>                        
                    </div>
                    
                    <div class="campo">
                        <div class="tag">
                            <label for="name" class="form-label">Precio:</label>
                                <input type="text" id="price" name="price" value="<%= products.price %>" class="form-input">
                        </div>                        
                    </div>
                    <div class="campo">
                        <div class="tag">
                            <label for="name" class="form-label">Descuento:</label>
                                <input type="text" id="discount" name="discount" value="<%= products.discount %>" class="form-input">
                        </div>                        
                    </div>
                    <div class="campo">
                        <div class="tag">
                            <label for="stock" class="form-label">Cantidad de productos en stock:</label>
                                <input type="text" id="inStock" name="stock" value="<%= products.stock %>" class="form-input">
                        </div>                        
                    </div>
                    <div class="campo">
                        <div class="tag">
                            <label for="brand" class="form-label">Marca del producto:</label>
                                <input type="text" id="brand" name="brand" value="<%= products.brand %>"" class="form-input">
                        </div>                        
                    </div>
                    </div>
                    <div class="campo">
                        <div class="tag">
                            <label for="color" class="form-label">Color:</label>
                                <input type="text" id="color" name="color" value="<%= products.color %>" class="form-input">
                        </div>                        
                    </div>
                    <div class="campo">
                        <div class="tag">
                            <label for="name" class="form-label">Descripcion del producto:</label>
                                <input type="text" id="description" name="description" value="<%= products.description %>" class="form-input">                    
                        </div>                        
                    </div>
                    <div class="campo">
                        <div class="tag">
                            <label for="description" class="form-label">Imagenes:</label>
                                <input name="image" id="images" class="form-input" type="file" value="<%= products.image %>">        
                        </div>
                    </div>
                    <div class="options">
                        <label for="category" class="form-label">Categoría:</label>
                                <select name="category" id="category" class="form-input">
                                    <option value="">Elegí</option>
                                    <option value="1">Bicicletas</option>
                                    <option value="2">Accesorios</option>
                                    <option value="3">Componentes</option>
                                    <option value="4">Indumentaria</option>
                                    <option value="5">Ruedas</option>
                                    <option value="6">Ofertas</option>                                      
                    </div>

                    <div class="botones">                    
                        <input type="submit" value="Confirmar" class="submit">
                        <input type="reset" value="Borrar">
                    </div>
                </form>
            </article>
        </section>

        <!-- ## footer## -->
        <%- include('partials/footer') %>
        <!-- ## footer## -->
    
</body>
</html>