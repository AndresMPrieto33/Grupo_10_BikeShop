<!DOCTYPE html>
<html lang="en">
        <!-- ## HEAD ## -->
        <%- include('partials/head') %>
        <!-- ## HEAD ## -->
<body>
        <!-- ## header ## -->
        <%- include('partials/header') %>
        <!-- ## header ## -->

        <section>
            <article class="container">
                <form action="#" method="POST" enctype="multipart/form-data">
                    <div class="campo">
                        <div class="tag">
                            <label for="name" class="form-label">Nombre del producto:</label>
                                <input type="text" id="name" name="name" placeholder="Ej: Bicicleta Venzo" class="form-input">
                        </div>                        
                    </div>
                    
                    <div class="campo">
                        <div class="tag">
                            <label for="name" class="form-label">Precio:</label>
                                <input type="text" id="price" name="price" placeholder="$ 100000" class="form-input">
                        </div>                        
                    </div>
                    <div class="campo">
                        <div class="tag">
                            <label for="name" class="form-label">Descuento:</label>
                                <input type="text" id="discount" name="discount" placeholder="Ej: Bicicleta Venzo" class="form-input">
                        </div>                        
                    </div>
                    <div class="campo">
                        <div class="tag">
                            <label for="stock" class="form-label">Cantidad de productos en stock:</label>
                                <input type="text" id="inStock" name="inStock" placeholder="10" class="form-input">
                        </div>                        
                    </div>
                    <div class="campo">
                        <div class="tag">
                            <label for="brand" class="form-label">Marca del producto:</label>
                                <input type="text" id="brand" name="brand" placeholder="Venzo" class="form-input">
                        </div>                        
                    </div>
                    <div class="campo">
                        <div class="tag">
                            <label for="size" class="form-label">Rodado:</label>
                                <input type="text" id="size" name="size" placeholder="28" class="form-input">
                        </div>                        
                    </div>
                    <div class="campo">
                        <div class="tag">
                            <label for="color" class="form-label">Color:</label>
                                <input type="text" id="color" name="color" placeholder="Blanco" class="form-input">
                        </div>                        
                    </div>
                    <div class="campo">
                        <div class="tag">
                            <label for="name" class="form-label">Descripcion del producto:</label>
                                <input type="text" id="description" name="description" placeholder="Una Super Bici" class="form-input">                    
                        </div>                        
                    </div>
                    <div class="campo">
                        <div class="tag">
                            <label for="description" class="form-label">Imagenes:</label>
                                <input name="image" id="images" class="form-input" type="file">        
                        </div>
                    </div>
                    <div class="options">
                        <label for="category" class="form-label">Categoría:</label>
                                <select name="category" id="category" class="form-input">
                                    <option value="">Elegí</option>
                                    <option value="in-sale">Bicicletas</option>
                                    <option value="visited">Accesorios</option>
                                    <option value="in-sale">Componentes</option>
                                    <option value="in-sale">Indumentaria</option>
                                    <option value="in-sale">Ruedas</option>
                                    <option value="in-sale">Ofertas</option>
                    </div>

                    <div class="botones">                    
                        <input type="submit" value="Confirmar" class="submit">
                        <input type="reset" value="Borrar">
                    </div>
                </form>
            </article>
        </section>

        <!-- ## footer## -->
        <%- include('partials/footer') %>
        <!-- ## footer## -->
    
</body>
</html>