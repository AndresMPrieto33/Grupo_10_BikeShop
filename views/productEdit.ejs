<!DOCTYPE html>
<html lang="en">
        <!-- ## HEAD ## -->
        <%- include('partials/head') %>
        <!-- ## HEAD ## -->
<body>
        <!-- ## header ## -->
        <%- include('partials/header') %>
        <!-- ## header ## -->

        <main class="register">

            <form id="form" class="register-form" action="/products/edit/<%= products.id %> " method="POST"
                enctype="multipart/form-data">

                <div class="personal-info">
                    <input type="text" id="name" name="name" value="<%= products.name %>" 
                    class="form-control <%=locals.errors && errors.name ? 'is-invalid' : null %>"
                    value="<%= locals.oldData ? oldData.name : null %>">
                        <% if (locals.errors && errors.name) { %>
                            <div class="error-text" style="color: red;">
                                <%= errors.name.msg %>
                            </div>
                            <% } %>
                </div>


                <div class="personal-info">
                    <input type="text" id="price" name="price" value="<%= products.price %>" class="form-control"
                        <%=locals.errors && errors.price ? 'is-invalid' : null %>
                    value="<%= locals.oldData ? oldData.price : null %>">
                        <% if (locals.errors && errors.price) { %>
                            <div class="error-text" style="color: red;">
                                <%= errors.price.msg %>
                            </div>
                            <% } %>
                </div>


                <div class="personal-info">
                    <input type="text" id="discount" name="discount" value="<%= products.discount %>"
                        class="form-control" <%=locals.errors && errors.discount ? 'is-invalid' : null %>
                    value="<%= locals.oldData ? oldData.discount : null %>">
                        <% if (locals.errors && errors.discount) { %>
                            <div class="error-text" style="color: red;">
                                <%= errors.discount.msg %>
                            </div>
                            <% } %>
                </div>

                
                    <div class="personal-info">
                        <input type="text" id="inStock" name="stock" value="<%= products.stock %>"
                            class="form-control" <%= locals.errors && errors.stock ? 'is-invalid' : null %>
                            value="<%= locals.oldData ? oldData.stock : null %>">
                        <% if (locals.errors && errors.stock) { %>
                            <div class="error-text" style="color: red;">
                                <%= errors.stock.msg %>
                            </div>
                            <% } %>
                    </div>
                
                
                    <div class="personal-info">
                        <input type="text" id="brand" name="brand" value="<%= products.brand %>" 
                        class="form-control" <%= locals.errors && errors.brand ? 'is-invalid' : null %>
                        value="<%= locals.oldData ? oldData.brand : null %>">
                    <% if (locals.errors && errors.brand) { %>
                        <div class="error-text" style="color: red;">
                            <%= errors.brand.msg %>
                        </div>
                        <% } %>
                    </div>
                
                </div>
                
                    <div class="personal-info">
                        <input type="text" id="color" name="color" value="<%= products.color %>" 
                        class="form-control" <%= locals.errors && errors.color ? 'is-invalid' : null %>
                        value="<%= locals.oldData ? oldData.color : null %>">
                    <% if (locals.errors && errors.color) { %>
                        <div class="error-text" style="color: red;">
                            <%= errors.color.msg %>
                        </div>
                        <% } %>
                    </div>
                
                
                    <div class="personal-info">
                        <input type="text" id="description" name="description" value="<%= products.description %>"
                            class="form-control" <%= locals.errors && errors.description ? 'is-invalid' : null %>
                            value="<%= locals.oldData ? oldData.description : null %>">
                        <% if (locals.errors && errors.description) { %>
                            <div class="error-text" style="color: red;">
                                <%= errors.description.msg %>
                            </div>
                            <% } %>
                    </div>
                
                <div class="campo">
                    <div class="tag">
                        <label for="description" class="form-label">Imagenes:</label>
                        <input name="image" id="image" class="form-input" type="file"
                            value="<%= products.image %>">
                    </div>
                    
                    <div class="form-control <%= locals.errors && errors.image ? 'is-invalid' : null %>"
                        value="<%= locals.oldData ? oldData.image : null %>">
                    <% if (locals.errors && errors.image) { %>
                        <div class="error-text" style="color: red;">
                            <%= errors.image.msg %>
                        </div>
                        <% } %>
                    </div>
                </div>
                
                <div class="options">

                    <label for="category" class="form-label">Categoría:</label>
                    <select name="category" id="category" class="form-input">
                        <option value="">Elegí</option>
                        <option value="1">Bicicletas</option>
                        <option value="2">Accesorios</option>
                        <option value="3">Componentes</option>
                        <option value="4">Indumentaria</option>
                        <option value="5">Ruedas</option>
                        <option value="6">Ofertas</option>
                        </select>
                </div>
                
                
                <div class="botones">
                    
                    <input type="submit" value="Confirmar" class="submit">
                    <p></p>
                    <input type="reset" value="Borrar">
                
                </div>
            </form>
        </main>

        <!-- ## footer## -->
        <%- include('partials/footer') %>
        <!-- ## footer## -->


        <script src="/js/productEditValidation.js"></script>
    
</body>
</html>