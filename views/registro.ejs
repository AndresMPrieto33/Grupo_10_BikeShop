    <body>
        <!--## header ##  -->
        <%- include('partial/header') %>
        <!-- ## header ## -->

        <main class="register">
            <form action="/" method="POST">
                <div class="personal-info">
                <input type="text" name="name" placeholder="Nombre y apellido">
                    <br>
                    <input type="text" name="user" placeholder="Elija un nombre de usuario">
                    <br>
                    <input type="text" name="email" placeholder="ejemplo@undostres.com">
                    <br>
                    <label for="birthd_date"><b>Fecha de nacimiento</b></label>
                    <br>
                    <input type="text" name="birthd_date" id="birth_date">
                    <br>
                    <input type="text" name="address" placeholder="Dirección">
                </div>
                <!-- //Chequear si lo siguiente es necesario: -->

                <h4>Perfil del usuario</h4>
                

                <h4>Marque lo que mejor se adapte a usted:</h4>
                <br>
                <div class="caracteristicas">
                    <div>
                        <input type="checkbox" name="caracteristicas" value="a" id="a">
                        <label for="a">Quiero comenzar en el mundo del ciclismo</label>
                    </div>
                    <div>
                        <input type="checkbox" name="caracteristicas" value="b" id="b">
                        <label for="b">Soy un ciclista principante</label>
                    </div>
                    <div>
                        <input type="checkbox" name="caracteristicas" value="c" id="c">
                        <label for="c">Soy un ciclista experimentado</label>
                    </div>
                    <div>
                        <input type="checkbox" name="caracteristicas" value="d" id="d">
                        <label for="d">Soy un ciclista profesional y competitivo</label>
                    </div>
                </div>

                <!-- <h4>Foto de perfil</h4>
                <input type="file" name="avatar">
                <br>
                <br> -->
                <div class="password">
                    <input type="password" name="pass" placeholder="Creá tu contraseña">
                    <br>
                    <input type="password" name="pass_confirm" placeholder="Ingresá nuevamente tu contraseña">
                    <br>
                    <br>
                </div>
                <div class="botones">                    
                    <input type="submit" value="Enviar" class="submit">
                    <input type="reset" value="Borrar">
                    <br>
                    <br>
                </div>
            </form>
        </main>
        <!-- ## footer## -->
        <%- include('partial/footer') %>
        <!-- ## footer## -->
</html>

    </body>
</html>